@model IEnumerable<Kitchen.App.Models.RecipeViewModel>

@{
    ViewData["Title"] = "Przepisy";
}
<h1>Przepisy</h1>

<div class="container d-flex justify-content-center">
    <ul class="list-group mt-5 text-white">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("Details", "Recipes", new { id = item.Id })" style=" text-decoration: none; color: white;">
                <li class="list-group-item d-flex justify-content-between align-content-center">
                    <div class="d-flex flex-row">
                        <div class="ml-2">
                            <h6 class="mb-0">@Html.DisplayFor(modelItem => item.Title)</h6>
                            <div class="about">
                                <span>Autor: @item?.Name @item?.Surname</span>
                                <span>Kraj: @item.Country </span>
                                <span>Region: @item.Region </span>
                            </div>
                        </div>
                    </div>
                </li>
            </a>
        }
    </ul>
</div>
