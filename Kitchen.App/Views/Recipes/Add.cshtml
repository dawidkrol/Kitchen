@using Kitchen.Library.DataModels;
@model Kitchen.App.Models.RecipeDetailsViewModel

@{
    ViewData["Title"] = "Nowy przepis";

    IEnumerable<CategoryData> categories = ViewData["Categories"] as IEnumerable<CategoryData>;
    IEnumerable<RegionViewModel> regions = ViewData["Regions"] as IEnumerable<RegionViewModel>;
}

<h1>Dodaj przepis</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" required />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPodkategorii" class="control-label">Kategoria</label>
                <select asp-for="IdPodkategorii">
                    @foreach (var cat in categories)
                    {
                        foreach (var sub in cat.SubDirectories)
                        {
                            <option value="@sub.ID_Podkategorii">@sub.nazwa_podkategorii</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdPodkategorii" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Przepis" class="control-label"></label>
                <input type="text" asp-for="Przepis" class="form-control" required />
                <span asp-validation-for="Przepis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LiczbaPorcji" class="control-label">Liczba porcji</label>
                <input asp-for="LiczbaPorcji" class="form-control" />
                <span asp-validation-for="LiczbaPorcji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BialkoWPorcji" class="control-label">Bialko w porcji</label>
                <input asp-for="BialkoWPorcji" class="form-control" />
                <span asp-validation-for="BialkoWPorcji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeglowodanyWPorcji" class="control-label">Weglowodany w porcji</label>
                <input asp-for="WeglowodanyWPorcji" class="form-control" />
                <span asp-validation-for="WeglowodanyWPorcji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WartoscKalJednejPorcji" class="control-label">Wartosc kal w jednej porcji</label>
                <input asp-for="WartoscKalJednejPorcji" class="form-control" />
                <span asp-validation-for="WartoscKalJednejPorcji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TluszczeWPorcji" class="control-label">Wartosc kal w jednej porcji</label>
                <input asp-for="TluszczeWPorcji" class="form-control" />
                <span asp-validation-for="TluszczeWPorcji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SzacowanaWartosc" class="control-label">Szacowana wartosc</label>
                <input asp-for="SzacowanaWartosc" class="form-control" />
                <span asp-validation-for="SzacowanaWartosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPochodzenia" class="control-label">Pochodzenie</label>
                <select asp-for="IdPochodzenia">
                    @foreach (var cat in regions)
                    {
                        <option value="@cat.Id">@cat.Region , @cat.Kraj</option>
                    }
                </select>
                <span asp-validation-for="IdPochodzenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
